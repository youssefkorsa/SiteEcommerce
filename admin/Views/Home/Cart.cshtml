@model List<Purchase>
<div class="container header-container">
    <section id="header">

        <a href="#"><img class="LogoShop" src="Images/LogoShop.png" alt=""></a>
        <div>
            <ul id="navbar">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="Shop">Shop</a></li>
                <li><a asp-controller="Home" asp-action="About">About</a></li>
                <li><a asp-controller="Home" asp-action="History">History</a></li>
                 <li><a asp-controller="Home" asp-action="User"><i class="fa fa-user fa-lg"></i></a></li>
                <li><a href="#" class="active" style="border: none;"><i class="fa fa-shopping-cart fa-lg"></i></a></li>

            </ul>
        </div>
    </section>
</div>
<section class="cart">
    <table>
        <thead>
            <tr>
                <td>Remove</td>
                <td>Image</td>
                <td>Product</td>
                <td>Price</td>
                <td>Quantity</td>
                <td>Total</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var purchase in Model)
            {
                <tr>
                    <td><a asp-controller="Home" asp-action="DeletePurchase" asp-route-id="@purchase.Id"><i class="fa fa-times fa-lg"></i></a></td>
                    <td><img src="@purchase.Product.ImageURL" alt=""></td>
                    <td>@purchase.Product.Name</td>
                    <td><span class="price">@purchase.Product.Price</span>$</td>
                    <td><input class="Quantity" type="number" value="@purchase.QuantityPurchase" min="1"></td>
                    <td><span class="totalspan"></span></td>
                </tr>
                
            }
            
        </tbody>
    </table>

</section>

<div class="totalContainer">
    <div class="total">
        <h3>total</h3>
        <table>
            <tr>
                <td>Cart subtotal</td>
                <td><span id="TotalCart1"></span></td>
            </tr>
            <tr>
                <td>Shipping</td>
                <td>Free</td>
            </tr>
            <tr>
                <td><strong>Total</strong></td>
                <td><strong id="TotalCart2"></strong></td>
            </tr>
        </table>
        <button><a style="text-decoration:none;color:white" asp-controller="Home" asp-action="Checkout">Proced to Checkout</a></button>
    </div>
</div>

<div class="footer">
    <footer>
        <div class="row">
            <div class="column">
                <img class="LogoShop" src="Images/LogoShopWhiteBG.png" alt="">
                <p>Fashion Meets Individuality!</p>
            </div>
            <div class="column ">
                <h4>Contact</h4>
                <p><span>adresse: </span>23 Avenue de l'Europe Schiltigheim France</p>
                <p><span>email: </span>youssef.korsa@gmail.com</p>
                <p><span>Phone: </span>06 88 99 19 52</p>
            </div>
            <div class="column ">
                <h4>Links</h4>
                <a href="#">Home</a>
                <a href="#">Shop</a>
                <a href="#">About us</a>
                <a href="#">Contact</a>
                </ul>
            </div>
            <div class="column ">
                <h4>Follow us</h4>
                <div class="social-media">
                    <i class="fa fa-facebook fa-lg"></i>
                    <i class="fa fa-instagram fa-lg"></i>
                    <i class="fa fa-whatsapp fa-lg"></i>
                    <i class="fa fa-github fa-lg"></i>
                </div>

            </div>
