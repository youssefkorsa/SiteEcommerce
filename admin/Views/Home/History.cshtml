<div class="MainContainerHistory">
    <section class="mainSectionHistory">
    </section>
</div>

<section class="history">
    <div class="historyTitle">
        <h3>history of your purchases </h3>
    </div>

    <table>
        <thead>
            <tr>
                <td>Image</td>
                <td>Product</td>
                <td>Price</td>
                <td>Quantity</td>
                <td>Total</td>
                <td>Date de l'achat</td>
            </tr>
        </thead>
        <tbody>

           
            @foreach (Purchase purchase in Model)
            {
                    <tr>
                        <td><img src="@purchase.Product.ImageURL" alt=""></td>
                        <td>@purchase.Product.Name</td>
                        <td>@purchase.Product.Price $</td>
                        <td>@purchase.QuantityPurchase</td>
                        <td>@ViewBag.Total[i] $</td>
                        <td>@purchase.Date </td>
                </tr>
                i++;
            }


            
        </tbody>
    </table>

</section>



